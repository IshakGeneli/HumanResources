@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-logo">
    <span><b>İnsan Kaynakları</b> Paneli</span>
</div>
<div class="login-box ml-auto mr-auto">
    <!-- /.login-logo -->
  <div class="card">
      <div class="card-body login-card-body">
          
          <p class="login-box-msg">Kayıt Ol</p>

          <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="input-group mb-3">
                  <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Eposta"/>
                  <span asp-validation-for="Input.Email" class="text-danger"></span>
                  <div class="input-group-append">
                      <div class="input-group-text">
                          <span class="fas fa-envelope"></span>
                      </div>
                  </div>
              </div>
              <div class="input-group mb-3">
                  <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre"/>
                  <span asp-validation-for="Input.Password" class="text-danger"></span>
                  <div class="input-group-append">
                      <div class="input-group-text">
                          <span class="fas fa-lock"></span>
                      </div>
                  </div>
              </div>
              <div class="input-group mb-3">
                  <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre Onay"/>
                  <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                  <div class="input-group-append">
                      <div class="input-group-text">
                          <span class="fas fa-lock"></span>
                      </div>
                  </div>
              </div>
              <div class="row">
                  <!-- /.col -->
                  <div class="col-4 ml-auto">
                      <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Kayıt ol</button>
                  </div>
                  <!-- /.col -->
              </div>
          </form>

      </div>
    <!-- /.login-card-body -->
  </div>
</div>
