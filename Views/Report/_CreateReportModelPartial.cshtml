@using HumanResources.Enums
@model HumanResources.Models.Report
@{

}

<div class="modal fade" id="addReport" aria-labelledby="addReportLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addReportLabel">Rapor Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="bi bi-x-circle"></i></span>
                </button>
            </div>
            <form id="create-report-form" action="@Url.Action("Create")">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="ReportDate"></label>
                        <input asp-for="ReportDate" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectName"></label>
                        <select asp-for="ProjectName" asp-items="Html.GetEnumSelectList<ProjectName>()" class="form-control">
                            <option selected="selected" value="" disabled>Proje İsmi Seçiniz</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectType"></label>
                        <select asp-for="ProjectType" asp-items="Html.GetEnumSelectList<ProjectType>()" class="form-control">
                            <option selected="selected" value="" disabled>Proje Türü Seçiniz</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="Percentage"></label>
                        <input asp-for="Percentage" class="form-control" value="">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="button" class="btn btn-primary" data-save="modal">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>