@model Employee
@{

}

<div class="modal fade" id="employeeExcel" aria-labelledby="employeeExcelLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="employeeExcelLabel">Toplu Personel Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="bi bi-x-circle"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> Aşağıdaki <strong>Taslak Excel İndir</strong> butonu ile indirilebilecek olan dosyadaki tablo formatına uygun şekilde y]kleme yapılması gerekmektedir.
                </div>
                <div class="row justify-content-around">
                    <form asp-action="DownloadEmployeeExcelTemplate" method="post" enctype="multipart/form-data">
                        <button class="btn btn-success" type="submit">
                            <i class="bi bi-file-earmark-arrow-down"></i>
                            Taslak Excel İndir
                        </button>
                    </form>
                    <form asp-action="HandleExcelFile" method="post" enctype="multipart/form-data">
                        <label class="btn btn-primary" for="excelFile">
                            <input id="excelFile" type="file" name="excelFile" class="d-none" onchange="this.form.submit()">
                            <i class="bi bi-file-earmark-arrow-up"></i>
                            Excel Yükle
                        </label>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>



