@using System.Security.Principal

@if (User.Identity?.IsAuthenticated == true)
{
        <li class="nav-item badge badge-primary align-self-center mx-1">Kullanıcı @User.Identity?.Name!</li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.RouteUrl("/Identity/Account/Login", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-xs btn-danger text-dark">Çıkış Yap</button>
            </form>
        </li>
}
